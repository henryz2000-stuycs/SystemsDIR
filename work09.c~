#include <dirent.h>
#include <stdlib.h>
#include <stdio.h>
#include <sys/stat.h>

unsigned long get_size(struct dirent *entry){
  struct stat sb;
  stat(entry->d_name, &sb);
  //printf("%s", entry->d_name);
  return sb.st_size;
}

